<!DOCTYPE HTML>
<html>
<head>
    <title>FRENCH TECH</title>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="~/Images/logo_mini.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="~/Scripts/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="~/Content/main.css" />
    <!--[if lte IE 8]><link rel="stylesheet" href="~/Content/ie8.css" /><![endif]-->
    @RenderSection("ExternalCSS", false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="page-wrapper">

        <!-- Header -->
        <div id="header-wrapper" class="wrapper">
            <div id="header">

                <!-- Logo -->
                <div id="logo">                    
                    <h1><a href="@Url.Action("RechercherProduit","Produit")">FRENCH TECH</a></h1>
                    <p>Un site 100% français proposant des produits à la pointe de la technologie</p>
                </div>

                <!-- Nav -->
                <img src="~/Images/logo_mini_neg.png" alt="FRENCH TECH" id ="logo_img"/>
                <nav id="nav">
                    <ul>
                        <li class="current"><a href="@Url.Action("RechercherProduit","Produit")">Home</a></li>
                        <li>
                            <a href="#">PRODUITS</a>
                            <ul>
                                <li><a href="@Url.Action("listerProduitUtilisateur", "Produit")">Lister les produits</a></li>
                                <li><a href="#">Rechercher par nom</a></li>
                                <li><a href="#">Rechercher par prix</a></li>
                            </ul>
                        </li>
                        <li><a href="#">CONNEXION</a>
                            <ul>
                                <li><a href="@Url.Action("Inscription","Client")">S'enregistrer</a></li>
                                <li><a href="@Url.Action("Connexion", "Client")">S'authentifier</a></li>
                                <li><a href="@Url.Action("LoggedIn","Client")">Mon compte</a></li>
                            </ul>
                        </li>
                        <li><a href="#">PANIER</a></li>
                        <li><a href="#contact">CONTACT</a></li>
                    </ul>
                </nav>

            </div>
        </div>

        <!-- Main -->
        <div class="wrapper style2">
            <div class="title">@ViewBag.Title</div>
            <div id="main" class="container">
                @RenderBody()
            </div>
        </div>


        <!-- Footer -->
        <div id="footer-wrapper" class="wrapper">
            <div class="title">Contact</div>
            <div id="footer" class="container">
                <header class="style1">
                    <h2 id="contact">Contactez-nous</h2>
                </header>
                <hr />
                <div class="row 150%">
                    <div class="6u 12u(mobile)">

                        <!-- Contact Form -->
                        <section>
                            <form method="post" action="#">
                                <div class="row 50%">
                                    <div class="6u 12u(mobile)">
                                        <input type="text" name="name" id="contact-name" placeholder="Nom" />
                                    </div>
                                    <div class="6u 12u(mobile)">
                                        <input type="text" name="email" id="contact-email" placeholder="Email" />
                                    </div>
                                </div>
                                <div class="row 50%">
                                    <div class="12u">
                                        <textarea name="message" id="contact-message" placeholder="Message" rows="4"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="12u">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Envoyer" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </section>

                    </div>
                    <div class="6u 12u(mobile)">

                        <!-- Contact -->
                        <section class="feature-list small">
                            <div class="row">
                                <div class="6u 12u(mobile)">
                                    <section>
                                        <h3 class="icon fa-home">Addresse</h3>
                                        <p>
                                            13, avenue de la gare<br />
                                            78180 Montigny-le-Bretonneux
                                        </p>
                                    </section>
                                </div>
                                <div class="6u 12u(mobile)">
                                    <section>
                                        <h3 class="icon fa-comment">Social</h3>
                                        <p>
                                            <a href="#">frenchtech-corp</a><br />
                                            <a href="#">facebook.com/frenchtech</a>
                                        </p>
                                    </section>
                                </div>
                            </div>
                            <div class="row">
                                <div class="6u 12u(mobile)">
                                    <section>
                                        <h3 class="icon fa-envelope">Email</h3>
                                        <p>
                                            <a href="#">info@frenchtech.fr</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="6u 12u(mobile)">
                                    <section>
                                        <h3 class="icon fa-phone">Téléphone</h3>
                                        <p>
                                            +33 1 61 08 48 20
                                        </p>
                                    </section>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
                <hr />
                &copy; @DateTime.Now.Year FrenchTech. Tous droits réservés. - Mentions légales - Crédits
            </div>
        </div>

    </div>

    <!-- Scripts -->

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dropotron.min.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/skel-viewport.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <!--[if lte IE 8]><script src="~/Scripts/respond.min.js"></script><![endif]-->
    <script src="~/Scripts/main.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
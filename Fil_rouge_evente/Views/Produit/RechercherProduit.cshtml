@model IEnumerable<Fil_rouge_evente.Metier.Produit>
@{
    ViewBag.Title = "ITECH";
}

@section ExternalCSS{
    <style>
        .col-lg-2 {
            margin: 0px;
            padding: 0px;
        }
         
    </style>
}


<div>
    @using (Html.BeginForm("RechercherProduit", "Produit", FormMethod.Post))
    {
        <div class="container">
            <div class="row">
                <div class="col-sm-2 col-lg-2">@Html.DisplayNameFor(model => model.Categorie):</div>
                <div class="col-sm-2 col-lg-2">@Html.DisplayNameFor(model => model.Nom) :</div>
                <div class="col-sm-2 col-lg-2">@Html.Label("Prix minimum :")</div>
                <div class="col-sm-2 col-lg-2">@Html.Label("Prix maximum :")</div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-lg-2">@Html.TextBox("Categorie")</div>
                <div class="col-sm-2 col-lg-2">@Html.TextBox("Nom")</div>
                <div class="col-sm-2 col-lg-2"> @Html.TextBox("prixMin", 0, new { min = "0", type = "number", required = "required" })</div>
                <div class="col-sm-2 col-lg-2">@Html.TextBox("prixMax", 0, new { min = "0", type = "number", required = "required" })</div>
                <div class="col-sm-2 col-lg-2"><button type="submit" style="color:white" >Rechercher</button></div>
                <span>@ViewBag.MessageErreur</span><span>@ViewBag.MessageErreurCat</span><span>@ViewBag.MessageErreurPrix</span><span>@ViewBag.MessageErreurNom</span>
            </div>
        </div>
    }
</div>




<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nom)</th>
                <th>@Html.DisplayNameFor(model => model.Prix)</th>
                <th>@Html.DisplayNameFor(model => model.Stock)</th>
                <th>@Html.DisplayNameFor(model => model.Categorie)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => m.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => m.Prix)</td>
                    <td>@Html.DisplayFor(modelItem => m.Stock)</td>
                    <td>@Html.DisplayFor(modelItem => m.Categorie)</td>
                    <td><img src="../Content/IMG/@Html.DisplayFor(modelItem => m.Path)" alt="image" height="80px" /></td>
                    <td>@Html.ActionLink("Afficher", "afficherProduit", new { id = m.ProduitId })</td>
                    <td>@Html.ActionLink("Ajouter au panier", "ajouterLigneCommande", new { id = m.ProduitId })</td>
                </tr>
            }
        </tbody>
    </table>
</div>